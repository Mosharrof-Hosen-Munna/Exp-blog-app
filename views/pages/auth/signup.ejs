<%- include('../../partials/header.ejs') %>
    <div>
    <div class="container my-container my-5 ">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card card-body text-light bg-dark">
                    <h4 class="text-center mt-3">Create A New Account</h4>
                    <form action="/auth/signup"  method="POST">
                        <div class="form-group my-3">
                            <label for="username">Enter your Username</label>
                            <input type="text" value="<%=values.username%>" name="username" id="username" class="form-control <%= errors.username? 'is-invalid':'' %> " placeholder="">
                            <div class="invalid-feedback">
                                <%= errors.username && errors.username %> 
                              </div>
                        </div>
                        <div class="form-group my-3">
                            <label for="email">Enter your Email</label>
                            <input type="email" value="<%=values.email%>" name="email" id="email" class="form-control <%= errors.email? 'is-invalid':'' %>" placeholder="">
                            <div class="invalid-feedback">
                                <%= errors.email %> 
                              </div>
                        <div class="form-group my-3">
                             <label for="password">Enter A Strong Password</label>
                             <input type="password" value="<%= values.password %>" name="password" id="password" class="form-control <%= errors.password? 'is-invalid':'' %>" placeholder="">
                             <div class="invalid-feedback">
                                <%= errors.password %> 
                              </div>
                         </div>
                         <div class="form-group my-3">
                            <label for="confirmPassword">Confirm Password</label>
                            <input type="password" name="confirmPassword" id="confirmPassword" class="form-control <%= errors.confirmPassword? 'is-invalid':'' %>" placeholder="">
                            <div class="invalid-feedback">
                                <%= errors.confirmPassword %> 
                              </div>
                        </div>
                            <div class="row ">
                                <div class=" col-12 m-auto  col-md-12  text-center">
                                    <button class="btn col btn-primary col-12 col-md-6 my-3" type="submit" value="signup">Singup</button>
                                </div>
                            </div>
                    </form>
                    <div class="text-center">
                        <a href="/auth/login" class="lead text-center my-2" style="font-size: 14px !important;">Already Have An Account? Login Here</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../../partials/footer.ejs') %>    
        </body>

        </html>